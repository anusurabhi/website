<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Listing pins</h1>
  </div>

<table>
   
  <thead>
      <tr>
      <th></th>
      <th></th>
      <th></th>
       </tr>
   
  </thead>
  <tbody>
        <% @pins.each do |pin| %>
        <tr>
         <td><%= pin.description %></td>

        <td><%= link_to 'Show', pin, class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class= "panel-footer">
<%= link_to 'New Pin', new_pin_path %>
</div>
